<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">
                <h1 class="text-center"><%= @blogpost.title %></h1>
                <br/>
                <h4>Posted by: <%= @poster.first_name %> <%= @poster.last_name %> <small>On: <%= @blogpost.created_at.to_formatted_s(:long_ordinal) %></small></h4>
                <br/>
                <p><%= @blogpost.body %></p>
            </div>
        </div>
    </div>
</div>