<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="text-center">Blogposts</h1>
      <br/>
        <% @blogposts.each do |blogpost| %>
          <div class="row">
            <div class="col-sm-4">
              <%= link_to blogpost do %>
                <h3><%= blogpost.title %></h3>
              <% end %>
            </div>
            <div class="col-sm-4 col-sm-offset-4">
              <h5>on: <%= blogpost.created_at.to_formatted_s(:long_ordinal) %></h5>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>